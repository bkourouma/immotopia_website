---
// Footer component for Astro - simplified version
const currentYear = new Date().getFullYear();

const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL || 'contact@immotopia.com';
const contactPhone = import.meta.env.PUBLIC_CONTACT_PHONE || '+33 X XX XX XX XX';

const facebookUrl = import.meta.env.PUBLIC_FACEBOOK_URL;
const linkedinUrl = import.meta.env.PUBLIC_LINKEDIN_URL;
const twitterUrl = import.meta.env.PUBLIC_TWITTER_URL;

const navigationLinks = [
  { href: '/la-solution', label: 'La Solution' },
  { href: '/fonctionnalites', label: 'Fonctionnalités' },
  { href: '/pour-qui', label: 'Pour Qui' },
  { href: '/tarifs', label: 'Tarifs' },
];

const resourcesLinks = [
  { href: '/blog', label: 'Blog' },
  { href: '/ressources/guides', label: 'Guides' },
  { href: '/faq', label: 'FAQ' },
];
---

<footer class="relative mt-auto overflow-hidden bg-gradient-to-br from-gray-900 via-gray-900 to-slate-900 text-white">
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_30%,rgba(59,130,246,0.1),transparent_50%)] animate-gradient-shift" />
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_80%_70%,rgba(139,92,246,0.1),transparent_50%)] animate-gradient-shift" style="animation-delay: 2s;" />
  </div>

  <!-- Grid Pattern -->
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff08_1px,transparent_1px),linear-gradient(to_bottom,#ffffff08_1px,transparent_1px)] bg-[size:24px_24px]" />

  <div class="relative mx-auto max-w-[1440px] px-6 pb-6 pt-16 md:px-6 lg:px-20">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-4">
      <!-- Company Info -->
      <div class="mb-6">
        <div class="mb-4 flex items-center gap-2">
          <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-gradient-to-br from-blue-500 to-indigo-600 text-white shadow-lg">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
          </div>
          <h3 class="bg-gradient-to-r from-blue-400 to-indigo-400 bg-clip-text text-lg font-bold text-transparent">
            ImmoTopia
          </h3>
        </div>
        <p class="mb-6 text-sm leading-relaxed text-gray-300">
          Plateforme SaaS complète pour la gestion immobilière professionnelle.
        </p>
        {(facebookUrl || linkedinUrl || twitterUrl) && (
          <div class="mt-4 flex gap-3">
            {facebookUrl && (
              <a
                href={facebookUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Facebook"
                class="group relative flex h-10 w-10 items-center justify-center rounded-lg bg-gray-800 text-gray-400 transition-all duration-300 hover:scale-110 hover:bg-gradient-to-br hover:from-blue-500 hover:to-blue-600 hover:text-white hover:shadow-lg"
              >
                <svg class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            )}
            {linkedinUrl && (
              <a
                href={linkedinUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="LinkedIn"
                class="group relative flex h-10 w-10 items-center justify-center rounded-lg bg-gray-800 text-gray-400 transition-all duration-300 hover:scale-110 hover:bg-gradient-to-br hover:from-blue-600 hover:to-blue-700 hover:text-white hover:shadow-lg"
              >
                <svg class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
            {twitterUrl && (
              <a
                href={twitterUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Twitter"
                class="group relative flex h-10 w-10 items-center justify-center rounded-lg bg-gray-800 text-gray-400 transition-all duration-300 hover:scale-110 hover:bg-gradient-to-br hover:from-cyan-500 hover:to-blue-500 hover:text-white hover:shadow-lg"
              >
                <svg class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            )}
          </div>
        )}
      </div>

      <!-- Navigation -->
      <div class="mb-6">
        <h4 class="mb-6 text-base font-semibold text-white">Navigation</h4>
        <ul class="space-y-3">
          {navigationLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-gray-300 transition-colors duration-200 hover:text-white hover:underline"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div class="mb-6">
        <h4 class="mb-6 text-base font-semibold text-white">Ressources</h4>
        <ul class="space-y-3">
          {resourcesLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-gray-300 transition-colors duration-200 hover:text-white hover:underline"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="mb-6">
        <h4 class="mb-6 text-base font-semibold text-white">Contact</h4>
        <ul class="space-y-3">
          <li>
            <a
              href={`mailto:${contactEmail}`}
              class="flex items-center gap-2 text-sm text-gray-300 transition-colors duration-200 hover:text-white"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {contactEmail}
            </a>
          </li>
          <li>
            <a
              href={`tel:${contactPhone}`}
              class="flex items-center gap-2 text-sm text-gray-300 transition-colors duration-200 hover:text-white"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {contactPhone}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 border-t border-gray-800 pt-8 text-center">
      <p class="text-sm text-gray-400">
        © {currentYear} ImmoTopia. Tous droits réservés.
      </p>
    </div>
  </div>
</footer>

