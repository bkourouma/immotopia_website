---
// Top Bar CTA component for Astro
const contactPhone = import.meta.env.PUBLIC_CONTACT_PHONE || '+225 01 23 45 67 89';
---

<div
  class="fixed top-0 left-0 right-0 z-50 bg-gradient-to-r from-[#2563EB] to-[#1D4ED8] text-white shadow-md"
>
  <div class="mx-auto max-w-[1440px] flex items-center justify-between px-4 py-2.5">
    <!-- CTA Principal -->
    <a
      href="/contact?signup=true"
      class="flex items-center gap-2 text-sm font-medium transition-all duration-200 hover:opacity-90 group"
    >
      <span class="text-base">ðŸš€</span>
      <span>Essai gratuit â€“ Configuration rapide</span>
      <svg class="h-4 w-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>

    <!-- Info Links Ã  droite (Desktop) -->
    <div class="hidden md:flex items-center gap-6 text-sm">
      <a
        href={`tel:${contactPhone}`}
        class="flex items-center gap-2 text-white/90 hover:text-white transition-colors"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span>{contactPhone}</span>
      </a>

      <a
        href="/contact"
        class="flex items-center gap-2 text-white/90 hover:text-white transition-colors"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <span>Assistance en ligne</span>
      </a>
    </div>

    <!-- Mobile: IcÃ´nes seulement -->
    <div class="md:hidden flex items-center gap-4">
      <a
        href={`tel:${contactPhone}`}
        class="text-white/90 hover:text-white transition-colors"
        aria-label="Appeler"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
      </a>
      <a
        href="/contact"
        class="text-white/90 hover:text-white transition-colors"
        aria-label="Assistance"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </a>
    </div>
  </div>
</div>

