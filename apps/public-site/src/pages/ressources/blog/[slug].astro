---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'Article Blog | ImmoTopia';
const description = 'Article du blog ImmoTopia sur la gestion immobilière professionnelle.';
---

<BaseLayout title={title} description={description} currentPath="/ressources/blog">
  <main class="bg-white">
    <article class="max-w-4xl mx-auto px-4 py-8 md:py-12">
      <div class="mb-6">
        <a href="/ressources/blog" class="text-sm text-[#2563EB] hover:underline inline-flex items-center">
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Retour au blog
        </a>
      </div>
      
      <div class="rounded-lg border border-gray-200 bg-gray-50 p-12 text-center">
        <p class="text-lg text-gray-600">
          Article non trouvé ou en cours de préparation...
        </p>
      </div>
    </article>
  </main>
</BaseLayout>

