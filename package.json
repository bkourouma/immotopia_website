{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "description": "Monorepo TypeScript moderne avec SpectKit",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @monorepo/api dev\" \"pnpm --filter @monorepo/web dev\"",
    "dev:api": "pnpm --filter @monorepo/api dev",
    "dev:web": "pnpm --filter @monorepo/web dev",
    "dev:public-site": "pnpm --filter public-site dev",
    "dev:admin-panel": "pnpm --filter admin-panel dev",
    "dev:all": "concurrently -n \"API,ASTRO,VITE\" -c \"blue,green,yellow\" \"pnpm dev:api\" \"pnpm dev:public-site\" \"pnpm dev:admin-panel\"",
    "build": "pnpm -r build",
    "build:public-site": "pnpm --filter public-site build",
    "build:admin-panel": "pnpm --filter admin-panel build",
    "build:api": "pnpm --filter @monorepo/api build",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "deploy": "bash deploy.sh"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  }
}
